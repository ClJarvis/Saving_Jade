extends layout
link(rel='stylesheet', href='stylesheets/auction.css')

block content

	div.container.bg-primary

		div.row.success
		div.pull-left.col-md-4.col-md-offset-4
			div.enterItems.success
				div.items_form(method="POST", action="/user/register", name="itemsForm")
				h3 Edit Your Auction Items!
				p Title
					input(type="text" id="title" name="title")
				P Price
					input(type="text" id="price" name="price")
				p Seller
					input(type="text" id="seller" name="seller")
				P Auction Ends
					input(type="text" id="endDate" name="endDate")

