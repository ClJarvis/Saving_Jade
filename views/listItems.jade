extends layout
link(rel='stylesheet', href='/stylesheets/auction.css')

block content

	div.container.bg-primary

		div.row.success
		div.pull-left.col-md-4.col-md-offset-4
			div.enterItems.success
				form.items_form(method='POST', action='/shop/listItems', name='itemsForm')
					h3 List Your Auction Items!
					p Title
						input#title(type='text', name='title', value='#{shop.title}')
					p link to image
						input#image(type='url', name='image', value='#{shop.image}')
					p Price
						input#price(type='text', name='price', value='#{shop.price}')
					p Seller
						input#seller(type='text', name='seller', value='#{shop.seller}')
					p Auction Ends
						input#endDate(type='text', name='endDate', value='#{shop.endDate}')
					input(type='hidden', name='edit_item_id', value='#{shop._id}')


					p
					input(type='submit', class='submitButton', value='submit')
					p



